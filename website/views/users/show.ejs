<% include ../partials/header %>

<header class="ui huge header"><i class="user icon"></i> <%= user.forename + " " + user.surname %></header>

<header class="ui big header">General info</header>
<div class="ui segment">
	<header class="ui header">Username</header>
	<div class="item"><%= user.username %></div>
	<header class="ui header">Email</header>
	<div class="item"><%= user.email %></div>
</div>

<header class="ui big header">Approved rigs</header>
<div class="ui segment">
	<% if(!user.approvedRigs.length) { %>
		<div class="item">None</div>
	<% } %>
	<% user.approvedRigs.forEach(function(rig) {%>
		<div class="item">
			<a href="/rigs/<%= rig._id %>"><%= rig.name %></a>
		</div>
	<% }); %>
</div>

<div class="ui segment">
	<header class="ui small header">Date created</header>
	<span><%= user.created.toDateString() %></span>

	<header class="ui small header">Last modified</header>
	<span><%= user.modified.toDateString() %></span>
</div>

<a href="/users" class="ui blue inverted button">Go back</a>

<% if(currentUser && (currentUser.isAdmin || currentUser.canEditRigs)) { %>
	<a href="/users/<%= user._id %>/edit" class="ui yellow button">Edit</a>
	<form action="/users/<%= user._id %>?_method=DELETE" method="POST">
		<button class="ui negative button ">Delete</button>
	</form>
<% } %>

<% include ../partials/footer %>