<% include ../partials/header %>

<div class="ui huge header"><i class="users icon"></i> Users</div>
<p>View all registered users</p>

<table class="ui striped celled table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
		</tr>	
	</thead>
	<tbody>
		<% users.forEach(function(user) { %>
			<tr>
				<td><a href="/users/<%= user._id %>"><%= user.forename + " " + user.surname %></td></a>
				<td><%= user.email %></td>
			</tr>
		<% }); %>
	</tbody>
	
</table>

<% include ../partials/footer %>